{% extends 'base.html.twig' %}

{% block title %}Appointment Index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-center text-primary mb-4">Appointment List</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-hover text-center shadow-sm">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Patient Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Reason for Visit</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for appointment in appointments %}
                        <tr>
                            <td class="align-middle">{{ appointment.id }}</td>
                            <td class="align-middle">{{ appointment.patientName }}</td>
                            <td class="align-middle">{{ appointment.age }}</td>
                            <td class="align-middle">{{ appointment.reasonOfVisit }}</td>
                            <td class="align-middle">
                                <a href="{{ path('app_appointment_show', {'id': appointment.id}) }}" class="btn btn-info btn-sm me-2">
                                    <i class="fas fa-eye"></i> Show
                                </a>
                                <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}" class="btn btn-warning btn-sm me-2">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                {{ include('appointment/_delete_form.html.twig', {'appointment': appointment}) }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-danger fw-bold">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-end">
            <a href="{{ path('app_appointment_new') }}" class="btn btn-success btn-lg shadow">
                <i class="fas fa-plus"></i> Create New Appointment
            </a>
        </div>
    </div>
</div>
{% endblock %}
