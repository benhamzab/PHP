{% extends 'base.html.twig' %}

{% block title %}Appointment Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Appointment Details</h1>

    <table class="table table-bordered shadow">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Patient Name</th>
                <td>{{ appointment.patientName }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ appointment.age }}</td>
            </tr>
            <tr>
                <th>Reason for Visit</th>
                <td>{{ appointment.reasonOfVisit }}</td>
            </tr>
           
        </tbody>
    </table>

    <div class="mt-4">
        <a href="{{ path('app_appointment_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>

        <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>

        {{ include('appointment/_delete_form.html.twig', {'class': 'd-inline'}) }}
    </div>
</div>
{% endblock %}
