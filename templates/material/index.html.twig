{% extends 'base.html.twig' %}

{% block title %}Material Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary">Material Index</h1>

        <div class="d-flex justify-content-end mb-3">
            <a href="{{ path('app_material_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Material
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for material in materials %}
                        <tr class="align-middle text-center">
                            <td>{{ material.id }}</td>
                            <td>{{ material.name }}</td>
                            <td>{{ material.quantity }}</td>
                            <td>
                                <a href="{{ path('app_material_show', {'id': material.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Show
                                </a>
                                <a href="{{ path('app_material_edit', {'id': material.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-danger">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
