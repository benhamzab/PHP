{% extends 'base.html.twig' %}

{% block title %}MedicalPrescription index{% endblock %}

{% block body %}
    <h1>MedicalPrescription index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medical_prescription in medical_prescriptions %}
            <tr>
                <td>{{ medical_prescription.id }}</td>
                <td>
                    <a href="{{ path('app_medical_prescription_show', {'id': medical_prescription.id}) }}">show</a>
                    <a href="{{ path('app_medical_prescription_edit', {'id': medical_prescription.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medical_prescription_new') }}">Create new</a>
{% endblock %}
